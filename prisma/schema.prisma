generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int        @id @default(autoincrement())
  email         String        @unique
  password      String
  firstName     String
  lastName      String?
  savedContests UserContest[]
}

model Contests {
  title     String
  site      String
  startTime BigInt
  endTime   BigInt
  duration  Int
  url       String
  savedBy   UserContest[]

  @@id([site, title])
}

model UserContest {
  userId  Int
  site    String
  title   String
  user    User     @relation(fields: [userId], references: [id])
  contest Contests @relation(fields: [site, title], references: [site, title])

  @@id([userId, site, title])
}
